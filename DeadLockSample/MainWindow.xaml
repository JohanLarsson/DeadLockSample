<Window x:Class="DeadLockSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <Button Click="DeadLockClick">ConfigureAwait(true) (DeadLock)</Button>
            <Button Click="NoDeadLockClick">ConfigureAwait(true) (No Deadlock)</Button>
            <Button Click="SequentialClick">Sequential</Button>
            <Button Click="ParalellClick">Parallel</Button>
            <TextBlock x:Name="Result"/>
        </StackPanel>

    </Grid>
</Window>
